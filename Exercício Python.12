#Exercício 6
#Crie uma função chamada fatorial que recebe um número
# e retorna o fatorial dele.
from math import factorial
#Maneira 1 (Usando Return)
def fatorial1():

    num_fatorial = int(input("Digite o numero para fatorial: "))
    return factorial(num_fatorial) 

result = fatorial1()
print(result)


#Maneira 2 (Usando apenas input, sem return)
def fatorial():
    num_ = int(input("Digite o número: "))
    num_fatoriado = factorial(num_)

    print(f"Esse é o número fatoriado:{num_fatoriado}")

fatorial()

#Exercício 7
#Função para verificar se uma palavra é palíndromo
def palindromo():
    palin = input("Digite uma palavra: ").lower()
    if palin[::-1] == palin:
        print("É um palíndromo!")
    else:
        print("Não é um palíndromo!") 

palindromo()
